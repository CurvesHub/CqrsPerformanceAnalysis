# See http://EditorConfig.org for more information about .editorconfig files.

root = true

##########################################
# Style Settings
##########################################

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# C# files
[*.cs]
##########################################
# Severity: Warning
##########################################

# SA Diagnostic Rules
##########################################
dotnet_diagnostic.SA1629.severity = warning # SA1629: DocumentationTextMustEndWithAPeriod - We want to enforce this rule

##########################################
# Severity: None
##########################################

# CS Diagnostic Rules
##########################################
dotnet_diagnostic.CS7022.severity = none # CS7022: Entry point is global code . Entry point "AutoGeneratedProgram.Main(string[])" will be ignored - Not needed

# RCS Diagnostic Rules
##########################################
dotnet_diagnostic.RCS1194.severity = none # RCS1194: Implement exception constructors - No need for empty constructors

# SA Diagnostic Rules
##########################################
dotnet_diagnostic.SA0001.severity = none # SA0001: XML comment analysis is disabled due to project configuration - Explicitly disabled for test projects
dotnet_diagnostic.SA1000.severity = none # SA1000: KeywordsMustBeSpacedCorrectly - Clashes with: target type new expressions e.g. List<int> myList = new() { 1, 2, 3 }
dotnet_diagnostic.SA1009.severity = none # SA1009: ClosingParenthesisMustBeSpacedCorrectly - Clashes with: tuple expressions e.g. (1, 2, 3)
dotnet_diagnostic.SA1010.severity = none # SA1010: OpeningSquareBracketsMustBeSpacedCorrectly - Clashes with: collection expressions e.g. new List<int> { 1, 2, 3 } -> new [1, 2, 3]
dotnet_diagnostic.SA1101.severity = none # SA1101: PrefixLocalCallsWithThis - Not needed
dotnet_diagnostic.SA1200.severity = none # SA1200: UsingDirectivesMustBePlacedWithinNamespace - Not needed
dotnet_diagnostic.SA1309.severity = none # SA1309: FieldNamesMustNotBeginWithUnderscore - private fields should begin with underscore e.g. private readonly _myField
dotnet_diagnostic.SA1310.severity = none # SA1310: FieldNamesMustNotContainUnderscore - Clashes with: constants e.g. MY_CONSTANT
dotnet_diagnostic.SA1313.severity = none # SA1313: ParameterNamesMustBeginWithLowerCaseLetter - Clashes with: record types e.g. public record MyRecord(int MyProperty)
dotnet_diagnostic.SA1413.severity = none # SA1413: Use trailing comma in multi-line initializers - Not needed
dotnet_diagnostic.SA1515.severity = none # SA1515: SingleLineCommentMustBePrecededByBlankLine - Clashes with: comments in linq queries
dotnet_diagnostic.SA1633.severity = none # SA1633: FileMustHaveHeader - Not needed

dotnet_diagnostic.SA1106.severity = none # SA1106: CodeMustNotContainEmptyStatements - Throws an analyzer exception
dotnet_diagnostic.SA1201.severity = none # SA1201: ElementsMustAppearInTheCorrectOrder - Throws an analyzer exception
dotnet_diagnostic.SA1500.severity = none # SA1500: BracesForMultiLineStatementsMustNotShareLine - Throws an analyzer exception
dotnet_diagnostic.SA1502.severity = none # SA1502: ElementMustNotBeOnSingleLine - Throws an analyzer exception
dotnet_diagnostic.SA1508.severity = none # SA1508: ClosingBracketsMustNotBePrecededByBlankLine - Throws an analyzer exception

# AD Diagnostic Rules
##########################################
dotnet_diagnostic.AD0001.severity = none # AD0001: Analyzer has thrown an exception - Not needed

# MA Diagnostic Rules
##########################################
dotnet_diagnostic.MA0004.severity = none # MA0004: Use Task.ConfigureAwait(false) if the current SynchronizationContext is not needed - Not needed
dotnet_diagnostic.MA0026.severity = none # MA0026: TodoShouldBeSolved - Duplicate
dotnet_diagnostic.MA0016.severity = none # MA0016: Prefer using collection abstraction instead of implementation - Not needed
dotnet_diagnostic.MA0051.severity = none # MA0051: Method is too long (... lines; maximum allowed: 60) - Not needed

# Test files
[*Tests.cs]
# SA1600: ElementsMustBeDocumented - We don't need comments on test classes and methods
dotnet_diagnostic.SA1600.severity = none

# Migration files
[**Migrations/*.cs]
generated_code = true
dotnet_diagnostic.severity = none