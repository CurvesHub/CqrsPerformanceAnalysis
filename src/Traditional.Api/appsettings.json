{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200;http://elasticsearch:9200/",
          "indexFormat": "traditional-logs-{0:yyyy.MM}",
          "templateName": "serilog-logs-template",
          "autoRegisterTemplate": true,
          "numberOfShards": 1,
          "numberOfReplicas": 0
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName"],
    "Properties": {
      "Application": "TraditionalApi"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "LocalConnection": "Host=localhost;Port=5432;Database=postgres-main;Username=postgres-user;Password=postgres-password",
    "DockerConnection": "Host=db-main-postgres;Port=5432;Database=postgres-main;Username=postgres-user;Password=postgres-password",
    "JdbcConnection": "jdbc:postgresql://localhost:5432/postgres-main?user=postgres-user&password=postgres-password"
  }
}
